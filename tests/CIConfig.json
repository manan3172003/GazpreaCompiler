{
  "testDir": "testfiles",
  "testedExecutablePaths": {
    "<team-name>": "../bin/gazc"
  },
  "runtimes": {
    "<team-name>": "../bin/libgazrt.so"
  },
  "toolchains": {
    "gazprea-llc": [
      {
        "stepName": "gazprea",
        "executablePath": "$EXE",
        "arguments": ["$INPUT", "$OUTPUT"],
        "output": "gaz.ll",
        "allowError": true
      },
      {
        "stepName": "llc",
        "executablePath": "/opt/llvm/bin/llc",
        "arguments": ["-filetype=obj", "-relocation-model=pic", "$INPUT", "-o", "$OUTPUT"],
        "output": "gaz.o"
      },
      {
        "stepName": "clang",
        "executablePath": "/usr/bin/clang",
        "arguments": ["$INPUT", "-o", "$OUTPUT", "-L$RT_PATH", "-l$RT_LIB"],
        "output": "gaz"
      },
      {
        "stepName": "run",
        "executablePath": "$INPUT",
        "arguments": [],
        "usesInStr": true,
        "usesRuntime": true,
        "allowError": true
      }
    ]
  }
}